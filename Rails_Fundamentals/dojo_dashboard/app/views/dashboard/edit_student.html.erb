<h1>Edit <%= @student.first_name %> <%= @student.last_name %></h1>
<br>
<form action="/update/student/<%= @student.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
     <input type="hidden" name="_method" value="patch">
    <input type="string" name="first_name" value="<%= @student.first_name %>"><br/>
    <input type="string" name="last_name" value="<%= @student.last_name %>"><br/>
    <input type="string" name="email" value="<%= @student.email %>"><br/>
    <select name="dojo">
      <option value="<%= @student.dojo_id %>" selected="true" disabled="disabled"><%= @student.dojo.branch%></option>
      <% @dojos.each do |dojo| %>
        <option value="<%= dojo.id%>"><%= dojo.branch%></option>
      <% end %>
    </select>
    <br>
    <br>
    <input type='submit' value='Update'>
</form>
<br>
<a href="/">Home</a>
